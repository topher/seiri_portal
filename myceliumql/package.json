{
  "name": "myceliumql-restaurant-platform",
  "version": "1.0.0",
  "description": "MyceliumQL Federation Platform for Restaurant/Wine APIs",
  "main": "index.js",
  "scripts": {
    "start": "npm run gateway",
    "gateway": "cd services/gateway && npm start",
    "dev": "docker-compose -f infrastructure/docker-compose.yml up",
    "dev:build": "docker-compose -f infrastructure/docker-compose.yml up --build",
    "compose:schema": "./infrastructure/rover.sh",
    "setup": "./scripts/dev-setup.sh",
    "migrate": "node scripts/migrate.js",
    "test": "jest",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e"
  },
  "dependencies": {
    "@apollo/gateway": "^2.8.0",
    "@apollo/subgraph": "^2.8.0",
    "@sendgrid/mail": "^8.1.6",
    "@sendgrid/eventwebhook": "^8.1.6",
    "twilio": "^5.10.1",
    "@shopify/shopify-api": "^12.0.0",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "neo4j-driver": "^5.15.0",
    "redis": "^4.6.0",
    "kafkajs": "^2.2.4",
    "express": "^4.18.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "graphql",
    "federation",
    "restaurant",
    "wine",
    "shopify",
    "twilio",
    "sendgrid",
    "api-integration"
  ],
  "author": "MyceliumQL Team",
  "license": "MIT"
}